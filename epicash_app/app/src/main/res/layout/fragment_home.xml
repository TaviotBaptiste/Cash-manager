<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".HomeFragment">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:background="@color/Epicash_background"
                  tools:ignore="UselessParent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:layout_gravity="end">
            <ImageButton
                    android:src="@drawable/ic_baseline_person_24"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:scaleType="fitXY"
                    android:background="@android:color/transparent"
                    android:id="@+id/Epicash_home_button_profil"
                    android:contentDescription="@string/image">
            </ImageButton>
            <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>
            <ImageButton
                    android:src="@drawable/ic_baseline_credit_card_24"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:scaleType="fitXY"
                    android:background="@android:color/transparent"
                    android:id="@+id/Epicash_home_button_card"
                    android:layout_gravity="bottom"
                    android:contentDescription="@string/image">
            </ImageButton>
        </LinearLayout>
        <TextView
                android:id="@+id/Epicash_home_titre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginStart="20dp"
                android:text="@string/Epicash_home_titre"
                android:fontFamily="@font/roboto"
                android:textSize="22sp"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/rounded_corner"
                android:orientation="vertical">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/rounded_corner">
                <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="110dp"
                        android:layout_height="90dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_epicash_foreground"
                        android:contentDescription="@string/image"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:orientation="vertical">
                    <TextView
                            android:id="@+id/Epicash_home_solde_data"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="28sp"
                            android:text="@string/Epicash_home_solde_data"/>
                    <TextView
                            android:id="@+id/Epicash_home_solde"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:text="@string/Epicash_home_solde"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical">
            <TextView
                    android:text="@string/Epicash_home_SeeAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Epicash_home_SeeAll"/>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="120dp"
                          android:gravity="center_horizontal"
                          android:orientation="horizontal">
                <LinearLayout android:layout_width="102dp"
                              android:layout_height="120dp"
                              android:orientation="vertical"
                              android:gravity="center_horizontal"
                              android:background="@drawable/rounded_corner">
                    <ImageView
                            android:layout_width="102dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_epicash_foreground"
                            android:id="@+id/Epicash_home_image1"
                            android:contentDescription="@string/image"/>
                    <TextView
                            android:text="@string/Epicash_home_price1_data"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:layout_marginTop="5dp"
                            android:id="@+id/Epicash_home_price1_data"/>

                    <LinearLayout android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:orientation="horizontal"
                                  android:layout_marginTop="5dp">
                        <ImageView
                                android:src="@drawable/ic_baseline_remove_circle_outline_24"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/Epicash_home_price1_minus"
                                android:contentDescription="@string/image"/>
                        <TextView
                                android:text="@string/Epicash_home_price1_quantite"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:id="@+id/Epicash_home_price1_quantite"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"/>
                        <ImageView
                                android:src="@drawable/ic_baseline_add_circle_outline_24"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/Epicash_home_price1_add"
                                android:contentDescription="@string/image"/>
                    </LinearLayout>
                </LinearLayout>
                <View android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:layout_weight="1"/>
                <LinearLayout android:layout_width="102dp"
                              android:layout_height="120dp"
                              android:orientation="vertical"
                              android:gravity="center_horizontal"
                              android:background="@drawable/rounded_corner">
                    <ImageView
                            android:layout_width="102dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_epicash_foreground"
                            android:id="@+id/Epicash_home_image2"
                            android:contentDescription="@string/image"/>
                    <TextView
                            android:text="@string/Epicash_home_price2_data"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:layout_marginTop="5dp"
                            android:id="@+id/Epicash_home_price2_data"/>

                    <LinearLayout android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:orientation="horizontal"
                                  android:layout_marginTop="5dp">
                        <ImageView
                                android:src="@drawable/ic_baseline_remove_circle_outline_24"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/Epicash_home_price2_minus"
                                android:contentDescription="@string/image"/>
                        <TextView
                                android:text="@string/Epicash_home_price2_quantite"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:id="@+id/Epicash_home_price2_quantite"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"/>
                        <ImageView
                                android:src="@drawable/ic_baseline_add_circle_outline_24"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/Epicash_home_price2_add"
                                android:contentDescription="@string/image"/>
                    </LinearLayout>
                </LinearLayout>
                <View android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"/>
                <LinearLayout android:layout_width="102dp"
                              android:layout_height="120dp"
                              android:orientation="vertical"
                              android:gravity="center_horizontal"
                              android:background="@drawable/rounded_corner">

                    <ImageView
                            android:layout_width="102dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_epicash_foreground"
                            android:id="@+id/Epicash_home_image3"
                            android:contentDescription="@string/image"/>
                    <TextView
                            android:text="@string/Epicash_home_price3_data"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:layout_marginTop="5dp"
                            android:id="@+id/Epicash_home_price3_data"/>

                    <LinearLayout android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:orientation="horizontal"
                                  android:layout_marginTop="5dp">
                        <ImageView
                                android:src="@drawable/ic_baseline_remove_circle_outline_24"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/Epicash_home_price3_minus"
                                android:contentDescription="@string/image"/>
                        <TextView
                                android:text="@string/Epicash_home_price3_quantite"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:id="@+id/Epicash_home_price3_quantite"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"/>
                        <ImageView
                                android:src="@drawable/ic_baseline_add_circle_outline_24"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/Epicash_home_price3_add"
                                android:contentDescription="@string/image"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginStart="20dp"
                      android:layout_marginEnd="20dp"
                      android:layout_marginTop="10dp"
                      android:background="@drawable/rounded_corner"
                      android:orientation="vertical">
            <TextView
                    android:text="@string/Epicash_home_panier"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView3"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/list"
                    android:name="com.epicorp.epicash.PanierItemFragment"
                    android:layout_width="match_parent"
                    android:layout_height="115dp"
                    android:elevation="5dp"
                    android:scrollbars="vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    app:layoutManager="LinearLayoutManager"
                    tools:context=".PanierItemFragment"
                    tools:listitem="@layout/fragment_item"/>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:gravity="right"
                          tools:ignore="RtlHardcoded">
                <TextView
                        android:text="Total : "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/Epicash_home_total"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"/>
                <TextView
                        android:text="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/Epicash_home_price_data"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"/>
                <TextView
                        android:text="â‚¬"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/Epicash_home_euros"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="20dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:gravity="bottom"
                      android:layout_marginLeft="20dp"
                      android:layout_marginRight="20dp">
            <Button
                    android:id="@+id/Epicash_home_button_paiement"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/white"
                    android:background="@drawable/rounded_corner_blue"
                    android:fontFamily="@font/roboto"
                    android:text="@string/Epicash_home_button_paiement"
                    android:textSize="19sp"
                    android:textAllCaps="false"
                    tools:ignore="TextContrastCheck"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>